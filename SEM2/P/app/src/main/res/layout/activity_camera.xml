<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera"
    android:gravity="center"
    android:background="@color/blanc_gris"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/la_photo"
        android:scaleType="centerCrop"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/camera"/>

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/gant_bleu"
        android:text="@string/prendre_une_photo"
        />

    <Button
        android:id="@+id/btn_choose_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/gant_rouge"
        android:layout_marginTop="20dp"
        android:text="@string/choisir_une_photo"/>

</LinearLayout>