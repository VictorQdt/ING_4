<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanc_gris"
    android:padding="16dp"
    android:layout_margin="8dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/image_recycleView"
        android:src="@mipmap/ic_launcher_mma"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Combat"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/description_recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/au_combat"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>