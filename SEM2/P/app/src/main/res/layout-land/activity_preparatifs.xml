<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preparation"
    android:background="@color/blanc_gris"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Les deux ImageView -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gloves_red"
            android:layout_marginRight="200dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gloves_blue"/>
    </LinearLayout>
    <!-- Les deux TextView Equipes -->
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/fighter_one"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginRight="150dp"/>
        <TextView
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/fighter_two"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
    </LinearLayout>
    <!-- Les deux EditText Equipes -->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_fighter1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/fighter_one"
            android:textColorHint="@color/gant_rouge"
            android:textColor="@color/gant_rouge"
            android:textAlignment="center"
            android:layout_marginRight="150dp"/>

        <EditText
            android:id="@+id/edit_fighter2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/fighter_two"
            android:textColorHint="@color/gant_bleu"
            android:textColor="@color/gant_bleu"
            android:textAlignment="center"/>

    </LinearLayout>
    <!-- Le dropdown type de poids -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Spinner
        android:tag="poids"
        android:layout_marginTop="20dp"
        android:id="@+id/spinner_weight_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!-- Le dropdown type de combat -->
    <Spinner
        android:tag="rounds"
        android:layout_marginTop="20dp"
        android:id="@+id/spinner_fight_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <!-- La checkbox pour l'accord de gÃ©olocalisation
    <CheckBox
        android:layout_marginTop="20dp"
        android:id="@+id/checkbox_localisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accord_localisation"
        android:checked="false"/> -->

</LinearLayout>